# Spec Workbench Backend Configuration

# Server settings
PORT=5050
HOST=localhost
NODE_ENV=development

# API Base URL for internal services (MCP, etc.)
API_BASE_URL=http://localhost:5050

# Database
DATABASE_PATH=./spec_workbench.db

# File system
SPEC_WORKDIR=./workdir

# External tools (ensure these are installed and accessible)
CUE_BINARY=cue
JQ_BINARY=jq

# Authentication (set to false for development)
AUTH_REQUIRED=false

# Development authentication tokens (DEVELOPMENT ONLY!)
# These should only be used in NODE_ENV=development
# DEV_AUTH_TOKEN=custom-dev-token
# DEV_AUTH_USER=custom-dev-user

# Rate limiting
RATE_LIMIT_TOKENS=10
RATE_LIMIT_REFILL=1
RATE_LIMIT_WINDOW=10000

# External tool timeout (10 seconds)
EXTERNAL_TOOL_TIMEOUT=10000

# WebSocket settings
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30000