{
  "name": "spec-workbench-backend",
  "version": "1.0.0",
  "description": "Real-time collaborative spec validation backend built with Bun",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build src/server.ts --outdir=dist --target=bun",
    "typecheck": "bun tsc --noEmit",
    "migrate": "bun src/migrations/run.ts",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "nats": "^2.28.2",
    "playwright": "^1.55.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bun-types": "^1.2.21",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "bun",
    "typescript",
    "websocket",
    "sqlite",
    "real-time",
    "collaboration",
    "cue",
    "validation"
  ],
  "author": "Nathan Rice",
  "license": "MIT"
}