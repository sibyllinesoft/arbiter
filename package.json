{
  "name": "arbiter",
  "version": "1.0.0",
  "description": "Spec-driven development CLI. Track work with tasks, persist context with notes, define architecture with CUE specs.",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "arbiter": "./arbiter-cli"
  },
  "scripts": {
    "build": "bun run build:all",
    "build:all": "bun run build:cue-runner && bun run build:importer && bun run build:cli",
    "build:cue-runner": "bun run --cwd packages/cue-runner build",
    "build:importer": "bun run --cwd packages/importer build",
    "build:cli": "bun run --cwd packages/cli build",
    "build:standalone": "bun build packages/cli/src/cli.ts --compile --outfile arbiter-cli --target=bun",
    "clean": "bun run --cwd packages/cue-runner clean && bun run --cwd packages/importer clean && bun run --cwd packages/cli clean",
    "cli": "./arbiter-cli",
    "cli:install": "./install-cli.sh",
    "cli:test": "./arbiter-cli --self-test",
    "cli:smoke": "bun run --cwd packages/cli smoke",
    "docs:cli": "bun scripts/generate-cli-docs.ts",
    "docs:cli:watch": "bun scripts/generate-cli-docs.ts --watch",
    "typecheck": "bunx tsc --build",
    "typecheck:watch": "bunx tsc --build --watch --pretty --preserveWatchOutput",
    "test": "bun test packages/ --recursive",
    "test:cli": "bun test packages/cli --recursive",
    "test:watch": "bun test packages/ --recursive --watch",
    "lint": "bunx @biomejs/biome lint .",
    "format": "bunx @biomejs/biome format . --write",
    "format:check": "bunx @biomejs/biome format .",
    "check": "bunx @biomejs/biome check . --write",
    "check:ci": "bunx @biomejs/biome check .",
    "quality": "bun run format:check && bun run lint && bun run typecheck",
    "quality:fix": "bun run format && bun run check && bun run typecheck",
    "validate": "bun run quality && bun run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "bun-types": "^1.2.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "yaml": "^2.8.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "arbiter",
    "cli",
    "cue",
    "specification",
    "tasks",
    "notes",
    "agent-friendly",
    "spec-driven",
    "bun",
    "typescript"
  ],
  "author": "Nathan Rice",
  "license": "LicenseRef-SPL-1.0"
}
