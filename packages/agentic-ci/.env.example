# Agentic CI Configuration
# Copy this file to .env and update with your values

# ================================
# GitHub Configuration (Required)
# ================================
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_REPOSITORY=owner/repo-name

# ================================
# OpenAI Configuration (Required)
# ================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=8192
OPENAI_TEMPERATURE=0.3

# ================================
# Auto-merge Configuration
# ================================
AUTO_MERGE_ENABLED=true
AUTO_MERGE_MAX_RISK_SCORE=30
AUTO_MERGE_REQUIRE_APPROVAL=true
AUTO_MERGE_MINIMUM_APPROVALS=1

# ================================
# Safety and Security
# ================================
EMERGENCY_STOP_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
RATE_LIMIT_MAX_CONCURRENT=10
RATE_LIMIT_MAX_DECISIONS_PER_HOUR=100

# ================================
# Application Settings
# ================================
NODE_ENV=production
LOG_LEVEL=info
WEBHOOK_PORT=3000

# ================================
# Database Configuration
# ================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agentic_ci
POSTGRES_USER=agentic_ci
POSTGRES_PASSWORD=agenticCI2024

# ================================
# Redis Configuration
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=agenticCI2024

# ================================
# Monitoring Configuration
# ================================
METRICS_ENABLED=true
METRICS_INTERVAL=60000
REPORTING_INTERVAL=300000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=agenticCI2024

# ================================
# Proxy Configuration
# ================================
HTTP_PORT=80
HTTPS_PORT=443

# ================================
# Agent Configuration
# ================================
FAILURE_ANALYZER_ENABLED=true
FAILURE_ANALYZER_MAX_TIME=300000
FAILURE_ANALYZER_CONFIDENCE_THRESHOLD=0.7

RISK_ASSESSOR_ENABLED=true
RISK_ASSESSOR_HISTORICAL_WINDOW=30
RISK_ASSESSOR_EXPERIENCE_WINDOW=90

REMEDIATION_AGENT_ENABLED=true
REMEDIATION_AGENT_MAX_ATTEMPTS=3

DECISION_MAKER_ENABLED=true
DECISION_MAKER_TIMEOUT=180000
DECISION_MAKER_ESCALATION_THRESHOLD=0.8

# ================================
# Quality Gates Configuration
# ================================
QUALITY_GATE_TEST_COVERAGE_THRESHOLD=90
QUALITY_GATE_PERFORMANCE_BUDGET=2000
QUALITY_GATE_SECURITY_SEVERITY=medium
QUALITY_GATE_CODE_QUALITY_SCORE=80

# ================================
# Integration Settings
# ================================
CHAOS_INTEGRATION_ENABLED=true
PERFORMANCE_GATES_ENABLED=true
AGENT_COLLABORATION_ENABLED=true

# ================================
# Audit and Compliance
# ================================
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_RETENTION_PERIOD=7776000000
AUDIT_ENCRYPT_LOGS=true
COMPLIANCE_REPORTING_ENABLED=true
COMPLIANCE_REPORT_SCHEDULE="0 0 * * MON"

# ================================
# Alert Configuration
# ================================
ALERT_ENABLED=true
ALERT_FAILURE_RATE_THRESHOLD=0.1
ALERT_RESPONSE_TIME_THRESHOLD=5000
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_CHANNELS=github,webhook

# ================================
# Development Settings
# ================================
# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# AUTO_MERGE_ENABLED=false