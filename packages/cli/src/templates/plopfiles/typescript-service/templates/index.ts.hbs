{{#if (eq framework "hono")}}
import { Hono } from "hono";
import { serve } from "@hono/node-server";
import { logger } from "hono/logger";
import { cors } from "hono/cors";
{{else if (eq framework "express")}}
import express from "express";
import cors from "cors";
{{else}}
import Fastify from "fastify";
{{/if}}

import { config } from "./config.js";
import { routes } from "./routes/index.js";
{{#if includeDb}}
import { initDb } from "./db/index.js";
{{/if}}

{{#if (eq framework "hono")}}
const app = new Hono();

// Middleware
app.use("*", logger());
app.use("*", cors());

// Routes
app.route("/", routes);

// Start server
{{#if includeDb}}
initDb().then(() => {
{{/if}}
  serve({
    fetch: app.fetch,
    port: config.port,
  }, (info) => {
    console.log(`ðŸš€ {{pascalCase name}} listening on http://localhost:${info.port}`);
  });
{{#if includeDb}}
});
{{/if}}
{{else if (eq framework "express")}}
const app = express();

// Middleware
app.use(cors());
app.use(express.json());

// Routes
app.use("/", routes);

// Start server
{{#if includeDb}}
initDb().then(() => {
{{/if}}
  app.listen(config.port, () => {
    console.log(`ðŸš€ {{pascalCase name}} listening on http://localhost:${config.port}`);
  });
{{#if includeDb}}
});
{{/if}}
{{else}}
const app = Fastify({ logger: true });

// Routes
app.register(routes);

// Start server
const start = async () => {
{{#if includeDb}}
  await initDb();
{{/if}}
  try {
    await app.listen({ port: config.port });
    console.log(`ðŸš€ {{pascalCase name}} listening on http://localhost:${config.port}`);
  } catch (err) {
    app.log.error(err);
    process.exit(1);
  }
};

start();
{{/if}}
