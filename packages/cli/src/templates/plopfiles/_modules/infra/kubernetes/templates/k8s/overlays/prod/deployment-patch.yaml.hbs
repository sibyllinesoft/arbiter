apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{kebabCase name}}
spec:
  replicas: 3
  template:
    spec:
      containers:
        - name: {{kebabCase name}}
          resources:
            requests:
              memory: "256Mi"
              cpu: "200m"
            limits:
              memory: "512Mi"
              cpu: "1000m"
