apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{kebabCase name}}
spec:
  replicas: 1
  template:
    spec:
      containers:
        - name: {{kebabCase name}}
          resources:
            requests:
              memory: "64Mi"
              cpu: "50m"
            limits:
              memory: "128Mi"
              cpu: "200m"
