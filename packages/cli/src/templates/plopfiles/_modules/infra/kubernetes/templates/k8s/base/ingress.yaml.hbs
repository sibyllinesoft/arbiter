apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{kebabCase name}}
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
spec:
  tls:
    - hosts:
        - {{kebabCase name}}.example.com
      secretName: {{kebabCase name}}-tls
  rules:
    - host: {{kebabCase name}}.example.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{kebabCase name}}
                port:
                  number: 80
