import SwiftUI

struct HomeView: View {
    @State private var healthStatus: String?
    @State private var isLoading = false

    var body: some View {
        VStack(spacing: 24) {
            Text("Welcome to {{titleCase name}}")
                .font(.title)
                .fontWeight(.semibold)

            Button(action: checkHealth) {
                if isLoading {
                    ProgressView()
                        .progressViewStyle(CircularProgressViewStyle())
                } else {
                    Text("Check API Health")
                }
            }
            .buttonStyle(.borderedProminent)
            .disabled(isLoading)

            if let status = healthStatus {
                Text("Status: \(status)")
                    .foregroundColor(.secondary)
            }

            NavigationLink(destination: DetailsView()) {
                Text("View Details")
            }
            .buttonStyle(.bordered)
        }
        .padding()
        .navigationTitle("{{titleCase name}}")
    }

    private func checkHealth() {
        isLoading = true

        Task {
            do {
                let response = try await APIClient.shared.checkHealth()
                await MainActor.run {
                    healthStatus = response.status
                    isLoading = false
                }
            } catch {
                await MainActor.run {
                    healthStatus = "Error: \(error.localizedDescription)"
                    isLoading = false
                }
            }
        }
    }
}

