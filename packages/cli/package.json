{
  "name": "@arbiter/cli",
  "version": "0.1.0",
  "description": "Arbiter CLI for CUE validation and management",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "arbiter": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:golden": "bun test --grep 'golden'",
    "test:performance": "bun run src/performance-test.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@arbiter/shared": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "glob": "^10.3.10",
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "bun-types": "^1.2.21",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "cli",
    "cue",
    "validation",
    "arbiter"
  ],
  "author": "Nathan Rice",
  "license": "MIT"
}