{
  "name": "@sibyllinesoft/arbiter",
  "version": "0.1.0",
  "description": "Spec-driven development CLI. Track work with tasks, persist context with notes, define architecture with CUE specs.",
  "type": "module",
  "bin": {
    "arbiter": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "keywords": [
    "arbiter",
    "cli",
    "cue",
    "spec-driven",
    "tasks",
    "notes",
    "agent-friendly",
    "ai-agents",
    "specification",
    "markdown",
    "obsidian"
  ],
  "author": "Nathan Rice",
  "license": "LicenseRef-SPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibyllinesoft/arbiter.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/sibyllinesoft/arbiter/issues"
  },
  "homepage": "https://sibylline.dev/arbiter/",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "mkdir -p dist && bun build src/cli.ts --outfile dist/cli.js --target=node --format=esm --bundle --external commander --external chalk --external fs-extra --external yaml --external zod --external glob --external chokidar --external diff --external uuid --external inquirer --external cli-spinners --external cli-table3 --external ora --external cuelang-js --external node-plop --external plop --external handlebars --external js-yaml --external @octokit/rest && rm -rf dist/templates && cp -R templates dist/templates && cp -R src/templates/plopfiles dist/templates/plopfiles",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "bunx @biomejs/biome check src",
    "test": "bun test",
    "smoke": "bun scripts/generator-smoke.ts",
    "dev": "bun run --watch --hot src/cli.ts",
    "arbiter:status": "arbiter status",
    "arbiter:test:scaffold": "arbiter tests scaffold --language typescript",
    "arbiter:test:cover": "arbiter tests cover --threshold 0.8",
    "arbiter:version:plan": "arbiter version plan --strict",
    "arbiter:sync": "arbiter sync --language typescript"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "cli-spinners": "^2.9.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "cue-wasm": "^1.0.0",
    "diff": "^7.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^9.3.7",
    "js-yaml": "^4.1.0",
    "node-plop": "^0.32.3",
    "ora": "^8.0.1",
    "plop": "^4.0.5",
    "uuid": "^11.0.4",
    "yaml": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/yaml": "^1.9.7",
    "typedoc": "^0.28.16"
  },
  "arbiter": {
    "profiles": [
      "library"
    ],
    "coverage": {
      "threshold": 0.8
    }
  }
}
