# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yaml,yml,md}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.go]
indent_style = tab