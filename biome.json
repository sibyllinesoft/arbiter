{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useTemplate": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "double"
    },
    "globals": [
      "describe",
      "it",
      "expect",
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach",
      "test",
      "vi",
      "pending",
      "Bun",
      "process",
      "console",
      "Buffer"
    ]
  },
  "files": {
    "include": [
      "apps/**/*.ts",
      "apps/**/*.tsx",
      "apps/**/*.js",
      "apps/**/*.jsx",
      "apps/**/*.mjs",
      "packages/**/*.ts",
      "packages/**/*.tsx",
      "packages/**/*.js",
      "packages/**/*.jsx",
      "packages/**/*.mjs",
      "scripts/**/*.ts",
      "scripts/**/*.js",
      "scripts/**/*.mjs",
      "*.ts",
      "*.js",
      "*.mjs"
    ],
    "ignore": [
      "**/dist/**",
      "**/node_modules/**",
      "**/.venv/**",
      "**/.venv-docs/**",
      "docs/public/**",
      "apps/web/frontend/dist/**",
      "packages/cli/dist/**",
      "arbiter-cli",
      "packages/arbiter-core/src/handlers/ai/examples/custom-agent.js",
      "handlers/templates/**"
    ],
    "ignoreUnknown": true,
    "maxSize": 10485760
  }
}
