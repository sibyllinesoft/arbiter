{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@arbiter/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@arbiter/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@arbiter/core": [
        "../../packages/arbiter-core/src/index.ts"
      ],
      "@arbiter/core/*": [
        "../../packages/arbiter-core/src/*"
      ],
      "@arbiter/api-types": [
        "../../packages/api-types/src/index.ts"
      ],
      "@arbiter/api-types/*": [
        "../../packages/api-types/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/arbiter-core"
    },
    {
      "path": "../../packages/api-types"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
