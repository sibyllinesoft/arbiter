{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@arbiter/shared": ["../../packages/shared/src/index.ts"],
      "@arbiter/shared/*": ["../../packages/shared/src/*"],
      "@arbiter/core": ["../../packages/arbiter-core/src/index.ts"],
      "@arbiter/core/*": ["../../packages/arbiter-core/src/*"],
      "@arbiter/api-types": ["../../packages/api-types/src/index.ts"],
      "@arbiter/api-types/*": ["../../packages/api-types/src/*"],
      "@arbiter/importer": ["../../packages/importer/src/index.ts"],
      "@arbiter/importer/*": ["../../packages/importer/src/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/arbiter-core"
    },
    {
      "path": "../../packages/api-types"
    },
    {
      "path": "../../packages/importer"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
