{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "bun-types",
      "node"
    ]
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./apps/api" }
  ],
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}