{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@arbiter/shared": ["./packages/shared/src"],
      "@arbiter/cli": ["./packages/cli/src"],
      "@arbiter/api-types": ["./packages/api-types/src"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/cli" },
    { "path": "./packages/api-types" },
    { "path": "./apps/api" },
    { "path": "./apps/web" }
  ],
  "exclude": ["node_modules", "dist", "**/dist/**", "**/node_modules/**"]
}
