{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "types": ["bun-types"],
    "paths": {
      "@arbiter/shared": ["./packages/shared/src"],
      "@arbiter/cue-runner": ["./packages/cue-runner/src"],
      "@arbiter/cli": ["./packages/cli/src"],
      "@arbiter/api-types": ["./packages/api-types/src"],
      "@arbiter/core": ["./packages/arbiter-core/src"],
      "@arbiter/shared-types": ["./packages/shared-types/src"],
      "@arbiter/shared-types/*": ["./packages/shared-types/src/*"],
      "@arbiter/importer": ["./packages/importer/src"],
      "@arbiter/importer/*": ["./packages/importer/src/*"]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/cue-runner"
    },
    {
      "path": "./packages/shared-types"
    },
    {
      "path": "./packages/cli"
    },
    {
      "path": "./packages/arbiter-core"
    },
    {
      "path": "./packages/api-types"
    },
    {
      "path": "./packages/importer"
    },
    {
      "path": "./apps/api"
    },
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/client"
    }
  ],
  "exclude": ["node_modules", "dist", "**/dist/**", "**/node_modules/**"]
}
