{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "types": ["bun-types"],
    "paths": {
      "@arbiter/specification": ["./packages/specification/src"],
      "@arbiter/specification/*": ["./packages/specification/src/*"],
      "@arbiter/validation": ["./packages/validation/src"],
      "@arbiter/validation/*": ["./packages/validation/src/*"],
      "@arbiter/cli": ["./packages/cli/src"],
      "@arbiter/importer": ["./packages/importer/src"],
      "@arbiter/importer/*": ["./packages/importer/src/*"]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./packages/specification"
    },
    {
      "path": "./packages/validation"
    },
    {
      "path": "./packages/cli"
    },
    {
      "path": "./packages/importer"
    }
  ],
  "exclude": ["node_modules", "dist", "**/dist/**", "**/node_modules/**"]
}
